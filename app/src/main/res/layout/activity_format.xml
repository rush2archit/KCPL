<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/idet_header"
            android:hint="Enter the Header Note here"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:height="100dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/idet_footer"
            android:hint="Enter the Footer Note here"
            android:layout_below="@+id/idet_header"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:height="100dp" />

        <Button
            android:text="UPDATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idb_updatef"
            android:elevation="0dp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_below="@+id/idet_footer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</ScrollView>